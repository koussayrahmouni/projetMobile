<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- User Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_input"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <!-- Placeholder for Profile Picture (Centering it) -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_profile_pic" />
                </FrameLayout>

                <!-- Full Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_profile"
                        android:contentDescription="name" />

                    <TextView
                        android:id="@+id/textView_show_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="full_name"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" /> <!-- Increased text size -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="email" />

                    <TextView
                        android:id="@+id/textView_show_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="email"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" /> <!-- Increased text size -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <!-- DOB -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="dob"
                        android:background="@drawable/ic_calendar"/>

                    <TextView
                        android:id="@+id/textView_show_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="dob"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" /> <!-- Increased text size -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <!-- Mobile -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mobile"
                        android:contentDescription="mobile" />

                    <TextView
                        android:id="@+id/textView_show_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="mobile"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" /> <!-- Increased text size -->
                </LinearLayout>

                <!-- Wallet Button -->
                <Button
                    android:id="@+id/button_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Wallet" />

                <!-- Transaction Button -->
                <Button
                    android:id="@+id/button_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go to Transactions"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@android:color/white" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/button_gotovoiture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Cars"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@android:color/white" />
                <Button
                    android:id="@+id/button_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
